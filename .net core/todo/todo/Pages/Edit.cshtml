@page
@model todo.Pages.EditModel 

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TodoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TodoItem.Id" />
            <div class="form-group">
                <label asp-for="TodoItem.Name" class="control-label"></label>
                <input asp-for="TodoItem.Name" class="form-control" />
                <span asp-validation-for="TodoItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="TodoItem.IsComplete" /> @Html.DisplayNameFor(model => model.TodoItem.IsComplete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
